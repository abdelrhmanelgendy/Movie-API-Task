<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movieItem_imageView"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_170sdp"
            android:src="@drawable/cap"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/movieItem_TV_movieName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:layout_below="@id/movieItem_imageView"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_4sdp"
            android:text="movie name"
            android:textSize="@dimen/_14sdp"
            android:maxLines="2"
            />

        <TextView
            android:id="@+id/movieItem_TV_moviepublishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieItem_TV_movieName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="movie name"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/movieItem_TV_movieRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieItem_TV_moviepublishDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="9.99"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieItem_TV_moviepublishDate"
            android:layout_toRightOf="@id/movieItem_TV_movieRate"
            android:src="@drawable/ic_baseline_star_rate_24"
            android:layout_marginTop="@dimen/_10sdp"
            app:tint="@color/yellow"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>