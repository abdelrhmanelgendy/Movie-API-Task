<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_color_1</item>
        <!-- Customize your theme here. -->

        <item name="android:windowAnimationStyle" >@style/AnimationStyle</item>

    </style>

    <style name="AnimationStyle" parent="@android:style/Animation.Activity" >
        <item name="android:activityOpenEnterAnimation" >@anim/activity_slide_in_right</item>
        <item name="android:activityCloseExitAnimation" >@anim/activity_slide_out_right</item>
        <item name="android:activityOpenExitAnimation" >@anim/activity_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation" >@anim/activity_slide_in_left</item>

    </style>
</resources>